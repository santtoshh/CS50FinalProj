clear = "\n" * 100


def gymplanner():
    while True:
        entireday = {}
        day = input("Is it your push, pull or leg day?: ")
        if day.upper() == "PUSH":
            sets = {}
            muscle = {}
            while True:

                add = input("Do you want to add a chest exercise?: ")
                if add.upper() == "YES":

                    exercise = input("What chest exercise do you want to do?: " )
                    set = input("How many sets do you want to do for this exercise?: ") + " sets"
                    reps = input("How many reps do you want to do for each set?: ") + " reps"
                    sets[set] = reps
                    muscle[exercise] = sets
                    entireday["Chest"] = muscle
                    print(clear)
                    print("Added!")
                    continue


                elif add.upper() == "NO":
                    print(clear)

                    break
                else:
                    print(clear)
                    print("Please type yes or no")
                    continue


            sets = {}

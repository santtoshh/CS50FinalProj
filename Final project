                    print("Added!")
                    continue


                elif add.upper() == "NO":
                    print(clear)
                    break


                else:
                    print(clear)
                    print("Please type yes or no")
                    continue
            for muscle in entireday:
                print(muscle + ':')
                for exercise in entireday[muscle]:
                    print(exercise)
                    for set in entireday[muscle][exercise]:

